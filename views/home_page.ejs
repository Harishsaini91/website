      // Pause slideshow on hover
      sliderElement.addEventListener("mouseenter", () => {
        clearInterval(slideshowInterval); // Stop auto-slide
      });

      // Resume slideshow on hover out
      sliderElement.addEventListener("mouseleave", () => {
